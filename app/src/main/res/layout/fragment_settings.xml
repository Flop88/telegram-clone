<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_header_block"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settings_user_photo"
            android:layout_width="@dimen/settings_user_photo_width"
            android:layout_height="@dimen/settings_user_photo_height"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:civ_circle_background_color="@color/colorAccent" />

        <TextView
            android:id="@+id/settings_user_nameTexView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Maxim Likhachev"
            android:textSize="@dimen/normal_text"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/settings_user_photo"
            app:layout_constraintStart_toEndOf="@+id/settings_user_photo"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccentDark"
            android:text="В сети"
            android:textSize="@dimen/small_text"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_user_nameTexView"
            app:layout_constraintStart_toEndOf="@+id/settings_user_photo"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/settings_text_account_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/settings_text_account"
        android:textStyle="bold"
        android:textSize="@dimen/small_text"
        app:layout_constraintTop_toBottomOf="@id/settings_header_block"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_large_margin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_number_phone_layout"
        app:layout_constraintTop_toBottomOf="@id/settings_text_account_TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsButtons">

        <TextView
            android:id="@+id/settings_phone_number_TextView"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_number_phone_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:text="+79107841345"
            style="@style/normalText" />
        <TextView
            android:id="@+id/settings_lable_phone_number_TextView"
            app:layout_constraintTop_toBottomOf="@id/settings_phone_number_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/settings_lable_phone_number"
            style="@style/smallText" />

        <View
            app:layout_constraintTop_toBottomOf="@id/settings_lable_phone_number_TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_number_login_layout"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_number_phone_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsButtons">

        <TextView
            android:id="@+id/settings_login_TextView"
            app:layout_constraintTop_toTopOf="@id/settings_login_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Flop88"
            style="@style/normalText" />
        <TextView
            android:id="@+id/settings_lable_login_TextView"
            app:layout_constraintTop_toBottomOf="@id/settings_login_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/settings_lable_login"
            style="@style/smallText" />

        <View
            app:layout_constraintTop_toBottomOf="@id/settings_lable_login_TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_bio_layout"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_number_login_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsButtons">

        <TextView
            android:id="@+id/settings_bio_TextView"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_bio_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:text="About me..."
            style="@style/normalText" />
        <TextView
            android:id="@+id/settings_lable_bio_TextView"
            app:layout_constraintTop_toBottomOf="@id/settings_bio_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/settings_lable_bio"
            style="@style/smallText" />

        <View
            app:layout_constraintTop_toBottomOf="@id/settings_lable_bio_TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_change_photo_ImageView"
        android:layout_width="@dimen/settings_btn_change_photo_width"
        android:layout_height="@dimen/settings_btn_change_photo_height"
        android:src="@drawable/ic_camera"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:civ_border_color="@color/colorGray"
        app:civ_circle_background_color="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/settings_header_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header_block" />



</androidx.constraintlayout.widget.ConstraintLayout>